<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/moodTra"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueSplash"
    tools:context=".HomepageActivity">

    <Button
        android:id="@+id/notifyNowButton"
        android:layout_width="178dp"
        android:layout_height="102dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/red_500"
        android:text="Notify Me Now"
        app:layout_constraintBottom_toTopOf="@+id/goToDiaryButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/goToDiaryButton"
        android:layout_width="178dp"
        android:layout_height="102dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:text="Diary"
        app:layout_constraintBottom_toTopOf="@+id/goalsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notifyNowButton" />

    <Button
        android:id="@+id/goalsButton"
        android:layout_width="172dp"
        android:layout_height="83dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/teal_700"
        android:text="Goals"
        app:layout_constraintBottom_toTopOf="@+id/moodTrackerBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goToDiaryButton"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/moodTrackerBtn"
        android:layout_width="166dp"
        android:layout_height="69dp"
        android:layout_marginStart="162dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="24dp"
        android:text="Mood Tracker"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goalsButton" />
</androidx.constraintlayout.widget.ConstraintLayout>