<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_view_question_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How you feel this week"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="32dp"
        android:layout_below="@id/text_view_question_four">

        <Button
            android:id="@+id/button_very_sad"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:backgroundTint="@color/blueDarker"
            android:background="@drawable/neutral_emoji"
            android:onClick="onEmojiButtonClicked"
            android:tag="very_sad"/>

        <Button
            android:id="@+id/button_sad"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:backgroundTint="@color/blueDarker"
            android:background="@drawable/sad_emoji"
            android:onClick="onEmojiButtonClicked"
            android:tag="sad"/>

        <Button
            android:id="@+id/button_happy"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:backgroundTint="@color/blueDarker"
            android:background="@drawable/happy_emoji"
            android:onClick="onEmojiButtonClicked"
            android:tag="happy"/>

        <Button
            android:id="@+id/button_very_happy"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:backgroundTint="@color/blueDarker"
            android:background="@drawable/not_happy"
            android:onClick="onEmojiButtonClicked"
            android:tag="very_happy"/>

    </GridLayout>

    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onNextButtonClicked"/>

</RelativeLayout>
