<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ButterMilk">

    <TextView
        android:id="@+id/settingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Settings"
        android:textSize="40sp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp" />


    <TextView
        android:id="@+id/moodTrackerEditTimeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Edit Mood Tracker notification time"
        android:textSize="18sp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/moodTrackerCurrentNotifTimeSet"
        android:layout_width="117dp"
        android:layout_height="124dp"
        android:layout_marginTop="15dp"
        android:text="Current notification time set: "
        android:textAlignment="center"
        android:textSize="18sp" />

    <TimePicker
        android:id='@+id/moodTrackerEditTimePicker'
        android:layout_width="wrap_content"
        android:layout_height="158dp"
        android:layout_marginStart="50dp"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:timePickerMode="spinner" />

    <Button
        android:id="@+id/moodTrackerEditTimeButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="Confirm notification time"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_gravity="center"
        />


    <Button
        android:id="@+id/profilePictureUploadButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="Upload profile picture"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_gravity="center"
        />


    <TextView
        android:id="@+id/dataExport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Export your diary to a save file"
        android:textSize="18sp"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/dataExportButton"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:text="Export Diary"
        android:layout_marginTop="5dp"/>

</LinearLayout>