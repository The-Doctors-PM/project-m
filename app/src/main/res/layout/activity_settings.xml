<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ButterMilk">

    <TextView
        android:id="@+id/settingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Settings"
        android:textSize="40sp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp" />


    <TextView
        android:id="@+id/moodTrackerEditTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Edit Mood Tracker notification time"
        android:textSize="18sp"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/moodTrackerEditTimeButton"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:text="Example"
        android:layout_marginTop="15dp"/>


    <Button
        android:id="@+id/profilePictureUploadButton"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:text="Upload profile picture"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_gravity="center"
        />


    <TextView
        android:id="@+id/dataExport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Export your diary to a save file"
        android:textSize="18sp"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/dataExportButton"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:text="Export Diary"
        android:layout_marginTop="5dp"/>

</LinearLayout>