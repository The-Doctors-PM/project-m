<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/comment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pastel_pink"
    android:orientation="vertical">

    <TextView
        android:id="@+id/datetxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="How are you feeling today?"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Press Me!"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageButton
            android:id="@+id/emojiBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/grinning_face_color" />

        <TableLayout
            android:id="@+id/emojiTbl"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/pastel_pink2"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:saveEnabled="true"
            android:visibility="invisible"
            tools:visibility="invisible">

            <TableRow
                android:layout_width="210dp"
                android:layout_height="70dp"
                android:background="@drawable/goals_round"
                android:backgroundTint="@color/pastel_pink2"
                android:clipChildren="false"
                android:textAlignment="center">

                <ImageButton
                    android:id="@+id/happymoodIBtn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:srcCompat="@drawable/grinning_face_color" />

                <ImageButton
                    android:id="@+id/neutramoodIBtn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:srcCompat="@drawable/grimacing_face_color" />

                <ImageButton
                    android:id="@+id/sadmoobIBtn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:srcCompat="@drawable/angry_face_color" />

            </TableRow>

            <TableRow
                android:layout_width="210dp"
                android:layout_height="70dp">

                <ImageButton
                    android:id="@+id/veryhappyIBtn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:srcCompat="@drawable/beaming_face_with_smiling_eyes_color" />

                <ImageButton
                    android:id="@+id/awkwardIBtn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:srcCompat="@drawable/confounded_face_color" />

                <ImageButton
                    android:id="@+id/sadsurpIBtn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:srcCompat="@drawable/anguished_face_color" />

            </TableRow>

            <TableRow
                android:layout_width="210dp"
                android:layout_height="70dp">

                <ImageButton
                    android:id="@+id/cryIBtn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:srcCompat="@drawable/crying_face_color" />

                <ImageButton
                    android:id="@+id/sadcryIBtn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:srcCompat="@drawable/anxious_face_with_sweat_color" />

                <ImageButton
                    android:id="@+id/lazyhappyIBtn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:srcCompat="@drawable/grinning_face_with_smiling_eyes_color" />
            </TableRow>
        </TableLayout>
    </RelativeLayout>


    <RatingBar
        android:id="@+id/moodBar"
        style="@android:style/Widget.DeviceDefault.Light.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_gravity="center"
        android:contentDescription="rating"
        android:indeterminate="false"
        android:isIndicator="false"
        android:max="10"
        android:min="0"
        android:numStars="10"
        android:progress="0"
        android:progressTint="@color/pink"
        android:stepSize="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:gravity="center">

        <Button
            android:id="@+id/back2ndBtn"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="Back"
            android:textColor="@color/grey"
            android:textSize="14sp"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/baseline_arrow_back_24"/>

        <Button
            android:id="@+id/next2ndBtn"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:text="Next"
            android:textColor="@color/grey"
            android:textSize="14sp"
            android:backgroundTint="@color/white"
            android:drawableRight="@drawable/ic_forward"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/storyTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>